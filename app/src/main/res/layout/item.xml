<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    android:background="@drawable/shape_corner">

    <TextView
        android:id="@+id/time_hour"
        android:layout_width="100dp"
        android:layout_height="24dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="22:35"
        android:textColor="#FF000000"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/time_date"
        android:layout_width="200dp"
        android:layout_height="24dp"
        android:gravity="center"
        android:text="2021/10/8"
        android:textColor="#FF000000"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/time_hour"
        app:layout_constraintTop_toTopOf="@+id/time_hour" />

    <TextView
        android:id="@+id/note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLength="20"
        android:maxLines="1"
        android:minLines="1"
        android:text="提醒事项提醒事项提醒事项提醒事项提醒事项提醒事项提醒事项提醒事项提醒事项提醒事项提醒事项提醒事项提醒事项提醒事项提醒事项提醒事项提醒事项提醒事项提醒"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/time_hour" />


    <RadioButton
        android:id="@+id/finished"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FF000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>